{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "plugins": ["react", "filenames"],
  "rules": {
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "camelcase": ["error", { "properties": "always" }],
    "filenames/match-regex": ["error", "^[a-z0-9-_.]+$", true]
  },
  "overrides": [
    {
      "files": ["src/components/**", "src/pages/**"],
      "rules": {
        "id-match": [
          "error",
          "^[A-Za-z][A-Za-z0-9]*$",
          {
            "onlyDeclarations": true,
            "properties": true
          }
        ]
      }
    }
  ]
}
